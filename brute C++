#include <iostream>
#include <fstream>
#include <mutex>

using namespace std;

const int batch_size = 1000000;

// Create a list of all the letters in the alphabet
string letters = "abcdefghijklmnopqrstuvwxyz";

// Create a list of all the digits
string numbrs = "0123456789";

// Combine the strings to create a list of all letters and numbrs
string all_chars = letters + numbrs;

// A mutex to synchronize access to the file
mutex file_lock;

int main() {
    // Open a file named "passwords" in write mode
    ofstream file("passwords.txt");

    // Generate a batch of combinations
    for (int i = 0; i < all_chars.size(); i++) {
        string combination = all_chars.substr(i, 1);

        // Acquire the lock
        lock_guard<mutex> lock(file_lock);

        // Write the combination to the file
        file << combination << endl;
    }

    return 0;
}
